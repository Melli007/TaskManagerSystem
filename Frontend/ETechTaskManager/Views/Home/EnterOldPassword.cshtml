@{
    ViewData["Title"] = "Sheno Passwordin e Vjeter";
}

@section BootstrapCSS
{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.4.1/dist/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
}

<div class="container mt-5">
    <h2 class="text-center">@ViewData["Title"]</h2>

    <form method="post" class="mx-auto mt-4" style="max-width: 400px;">
        <div class="form-group">
            <label for="oldPassword" class="font-weight-bold">Passwordi Vjeter</label>
            <input type="password"
                   class="form-control"
                   id="oldPassword"
                   name="oldPassword"
                   placeholder="Futni passwordin tuaj të vjetër"
                   required />

            <div class="mt-2">
                <a asp-action="SendResetLink" asp-controller="Home">Harruat passwordin?</a>
            </div>


            @if (ViewData["Error"] != null)
            {
                <small class="text-danger">@ViewData["Error"]</small>
            }
        </div>

        <div class="mt-3">
            <button type="submit" class="btn btn-primary mr-3">Paraqit</button>
            <button type="button"
                    class="btn btn-secondary"
                    onclick="location.href='@Url.Action("EditProfile", "Home")'">
                Anulo
            </button>
        </div>
    </form>
</div>
