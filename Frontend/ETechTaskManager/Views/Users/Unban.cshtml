@model ETechTaskManager.Models.UsersViewModel

@{
    ViewData["Title"] = "Unban User";
}

<style>
    /* Same styling as Delete */
    .delete-container {
        max-width: 600px;
        margin: 50px 0px 0px 350px;
        background: #ffffff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        border: 1px solid #e0e0e0;
    }

    .form-title {
        color: #0077cc;
        text-align: center;
        margin-bottom: 30px;
        font-size: 28px;
        font-weight: bold;
        text-transform: uppercase;
    }

    .btn-delete {
        background-color: #28a745;
        border-color: #28a745;
        padding: 12px 24px;
        color: #ffffff;
        font-size: 18px;
        border-radius: 5px;
        margin-right: 40px;
        transition: background-color 0.3s, transform 0.3s;
        cursor: pointer;
        border: none;
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.2);
        font-weight: bold;
    }

    .btn-delete:hover {
        background-color: #218838;
        transform: scale(1.05);
    }

    .btn-secondary {
        background-color: #f2f2f2;
        color: #566787;
        text-decoration: none;
        padding: 12px 24px;
        border-radius: 5px;
        transition: background-color 0.3s, color 0.3s;
        margin-left: 10px;
        font-weight: bold;
    }

    .btn-secondary:hover {
        background-color: #ddd;
        color: #333;
    }

    dl.row {
        margin: 0;
        font-size: larger;
    }

    dt {
        font-weight: bold;
        color: #0077cc;
    }

    dd {
        margin-left: 0;
        margin-bottom: 10px;
    }

    hr {
        margin: 15px 0;
        border: 0;
        border-top: 1px solid #e0e0e0;
    }
</style>

<div class="delete-container">
    <h2 class="form-title">Unban User</h2>
    <div class="form-section">
        <div>
            <h2 class="text-center">Are you sure you want to unban this user?</h2>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">ID</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Id)</dd>
                <hr />
                <dt class="col-sm-4">Full Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.FullName)</dd>
                <hr />
                <dt class="col-sm-4">Email</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>
                <hr />
            </dl>
        </div>

        <form asp-action="Unban">
            <input type="submit" value="Unban User" class="btn btn-success btn-delete" />
            <a asp-action="Index" class="btn-secondary">Cancel</a>
        </form>
    </div>
</div>
